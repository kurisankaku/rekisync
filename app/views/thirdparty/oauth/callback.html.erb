<%= render :partial => "shared/error", :locals => { error: @error } %>
<form action="/auth/<%= @params[:provider] %>/callback" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div>
    <label for="user"><%= t(".name") %></label>
    <input type="text" name="name" value="<%= @params.try(:[], :name) %>" id="name">
  </div>
  <div>
    <label for="email"><%= t(".email") %></label>
    <input type="email" name="email" value="<%= @params.try(:[], :email) %>" id="email">
  </div>
  <div>
    <input type="submit" value="<%= t(".register") %>" data-disable-with="Register">
  </div>
</form>
